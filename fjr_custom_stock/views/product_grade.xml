<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_grade_action" model="ir.actions.act_window">
        <field name="name">Product Grade</field>
        <field name="res_model">product.grade</field>
        <field name="view_mode">list</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product grade.
            </p>
        </field>
    </record>

    <record id="product_grade_view_list" model="ir.ui.view">
        <field name="name">product.grade.view.list</field>
        <field name="model">product.grade</field>
        <field name="arch" type="xml">
            <list string="" editable='bottom'>
                <field name="name"/>
            </list>
        </field>
    </record>

</odoo>
