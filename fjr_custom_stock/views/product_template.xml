<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_common_view_form_inherit" model="ir.ui.view">
        <field name="name">product.template.common.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="product_grade_id" />
                <field name="uom_category_id" />
                <label for="container_capacity"/>
                <div name="container_capacity_uom">
                    <field name="container_capacity" class="oe_inline" />
                    <span name="uom_span" groups="uom.group_uom" invisible="type == 'combo'">
                        <field name="uom_id" class="oe_inline" force_save="1" readonly="1" style="max-width:136px" options="{'no_create': True}"/>
                    </span>
                    / container
                </div>
                <field name="sales_person_ids" widget="many2many_tags" options="{'no_create': True}"  />
            </field>
        </field>
    </record>

</odoo>
