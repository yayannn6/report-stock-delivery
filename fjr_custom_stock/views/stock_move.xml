<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_view_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']//list//field[@name='product_uom']" position="after">
                <field name="container_quantity" optional="hide" />
            </xpath>
        </field>
    </record>

    <record id="stock_move_view_list_inherit" model="ir.ui.view">
        <field name="name">stock.move.view.list.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="after">
                <field name="container_quantity" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
