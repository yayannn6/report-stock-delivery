<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_search_inherit_my_products" model="ir.ui.view">
            <field name="name">product.template.search.my.products</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter name="my_products" string="Produk Saya" domain="[('sales_person_ids','in',[uid])]"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_action_customer_only" model="ir.actions.act_window">
            <field name="name">Products (My)</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_my_products': 1}</field>
            <field name="groups_id" eval="[(4, ref('fjr_custom_stock.group_customer_product_limited'))]"/>
        </record>

        <menuitem id="menu_product_template_action_customer_only" name="Products (My)" parent="stock.menu_stock_inventory_control" action="fjr_custom_stock.product_template_action_customer_only" groups="fjr_custom_stock.group_customer_product_limited"/>


    </data>
</odoo>
