<odoo>
    <record id="view_stock_report_wizard_form" model="ir.ui.view">
        <field name="name">stock.report.wizard.form</field>
        <field name="model">stock.report.wizard</field>
        <field name="arch" type="xml">
        <form string="Stock Report Wizard">
            <group>
            <field name="warehouse_ids" widget="many2many_tags"/>
            <field name="kategori_selection"/>
            </group>
            <footer>
            <button name="action_print_report" string="Print Report" type="object" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
        </field>
    </record>

    <record id="action_stock_report_wizard" model="ir.actions.act_window">
        <field name="name">Stock Report by Warehouse</field>
        <field name="res_model">stock.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_persedian_report"
              name="Persediaan Report"
              parent="stock.menu_warehouse_report"
              action="action_stock_report_wizard"
              sequence="55"/>
</odoo>
