<odoo>
    <record id="paperformat_landscape" model="report.paperformat">
        <field name="name">Landscape A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
    </record>

    <record id="action_export_stock_report" model="ir.actions.report">
        <field name="name">Export Stock Report</field>
        <field name="model">stock.quant</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">export_stock_report.report_export_stock</field>
        <field name="report_file">export_stock_report.report_export_stock</field>
        <field name="paperformat_id" ref="export_stock_report.paperformat_landscape"/>
        <field name="binding_model_id" ref="stock.model_stock_quant"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_stock_by_warehouse" model="ir.actions.report">
        <field name="name">Report Persediaan</field>
        <field name="model">stock.quant</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">export_stock_report.stock_report_template</field>
        <field name="report_file">export_stock_report.stock_report_template</field>
        <field name="paperformat_id" ref="export_stock_report.paperformat_landscape"/>
        <field name="binding_model_id" ref="stock.model_stock_quant"/>
        <field name="binding_type">report</field>
    </record>
    
</odoo>
